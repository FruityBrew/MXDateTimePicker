<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:controls="clr-namespace:DateTimePicker;assembly=DateTimePicker"

        >
    <Window.Resources>
        <controls:MultiCommandConverter x:Key="MultiCommandConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:DateTimePicker x:Name="DTPicker" Grid.Row="1" Value="{Binding Path=DateTimeForBuisnesLogic}">

        </controls:DateTimePicker>
        
        <Button Content="SaveDate" HorizontalAlignment="Stretch" Margin="20" Grid.Row="2" VerticalAlignment="Stretch">
            <Button.Command>
                <MultiBinding Converter="{StaticResource ResourceKey=MultiCommandConverter}">
                    <Binding Path="SaveChangesCommand"/>
                    <Binding ElementName="DTPicker" Path="ResetTimer"/>
                </MultiBinding>
            </Button.Command>

        </Button>

    </Grid>
</Window>
