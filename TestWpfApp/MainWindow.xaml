<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:controls="clr-namespace:DateTimePicker;assembly=DateTimePicker"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:DateTimePicker Grid.Row="1" Value="{Binding Path=DateTimeForBuisnesLogic}">

        </controls:DateTimePicker>
        <Button Content="Button" HorizontalAlignment="Left" Margin="177,40,0,0" Grid.Row="2" VerticalAlignment="Top" Width="244" Height="40"
                Command="{Binding SaveChangesCommand}"/>

    </Grid>
</Window>
